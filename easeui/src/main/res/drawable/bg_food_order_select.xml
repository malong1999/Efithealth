<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#dd6624"/>
            <corners android:radius="3dip"/>
            <stroke
                android:width="1dip"
                android:color="#dd6624"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#Fb8435"/>
            <corners android:radius="3dip"/>
            <stroke
                android:width="1dip"
                android:color="#Fb8435"/>
        </shape>
    </item>

</selector>