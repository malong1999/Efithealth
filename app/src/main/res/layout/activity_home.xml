<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ly_root">
    <com.ashokvarma.bottomnavigation.BottomNavigationBar
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_above="@id/bottom_navigation_bar"
         />



    <TextView
        android:id="@+id/tv_point"
        android:layout_width="@dimen/sz_18"
        android:layout_height="@dimen/sz_18"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/sz_34"
        android:layout_marginLeft="@dimen/sz_144"
        android:elevation="10000dp"
        android:background="@drawable/bg_red_oval"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="8sp"
        android:visibility="invisible" />


</RelativeLayout>
