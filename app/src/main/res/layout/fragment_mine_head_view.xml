<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sz_240"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/iv_header"
        android:layout_width="@dimen/sz_80"
        android:layout_height="@dimen/sz_80"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/sz_100"
        app:civ_border_width="1dp"
        />

    <TextView
        android:layout_marginTop="@dimen/sz_12"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_header"
        android:id="@+id/tv_header_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="马小布"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sz_18"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/sz_14"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_header"
        android:layout_toRightOf="@id/tv_header_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sz_4"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_header_userEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_mine_edit" />

    </LinearLayout>

</RelativeLayout>