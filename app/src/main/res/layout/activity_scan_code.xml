<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_scan_code"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.maxiaobu.healthclub.ui.activity.ScanCodeActivity">

    <cn.bingoogolapple.qrcode.zxing.ZXingView
        android:id="@+id/zxingview"
        style="@style/MatchMatch"
        app:qrcv_animTime="20"
        app:qrcv_borderColor="@android:color/transparent"
        app:qrcv_borderSize="1dp"
        app:qrcv_cornerColor="@color/colorOrange"
        app:qrcv_cornerLength="20dp"
        app:qrcv_cornerSize="3dp"
        app:qrcv_isBarcode="false"
        app:qrcv_isOnlyDecodeScanBoxArea="true"
        app:qrcv_isScanLineReverse="true"
        app:qrcv_customGridScanLineDrawable="@mipmap/test_grid_scan_line"
        app:qrcv_maskColor="#44000000"
        app:qrcv_rectWidth="250dp"
        app:qrcv_tipTextSize="12sp"
        app:qrcv_topOffset="120dp"/>

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sz_16"
        android:layout_marginLeft="@dimen/sz_18"
        android:layout_marginTop="@dimen/sz_16"
        android:src="@mipmap/ic_navigation_icon"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/sz_16"
        android:text="扫一扫"
        android:textColor="@color/white"
        android:textSize="@dimen/sz_20"/>

    <TextView
        android:id="@+id/ly_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sz_50"
        android:layout_marginRight="@dimen/sz_50"
        android:textColor="@color/white"
        tools:text="fdkjsdhfkjh"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="400dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/sz_20"
        >

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="@dimen/sz_50"
            android:layout_height="@dimen/sz_70"
            android:layout_marginLeft="@dimen/sz_50"
            android:src="@mipmap/ic_scan_photo"/>

        <ImageView
            android:id="@+id/iv_card"
            android:layout_width="@dimen/sz_50"
            android:layout_height="@dimen/sz_70"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_scan_card"/>

        <ImageView
            android:id="@+id/iv_light"
            android:layout_width="@dimen/sz_50"
            android:layout_height="@dimen/sz_70"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/sz_50"
            android:src="@mipmap/ic_scan_light"/>

    </RelativeLayout>

</FrameLayout>
