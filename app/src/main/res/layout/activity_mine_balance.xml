<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grayBackgroud"
                android:fitsSystemWindows="true"
                android:orientation="vertical">

    <include
        layout="@layout/common_title"
        />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:orientation="vertical">

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:mrl_rippleAlpha="0.1"
            app:mrl_rippleColor="#585858"
            app:mrl_rippleDelayClick="true"
            app:mrl_rippleDimension="10dp"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sz_78"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/iv_user_image"
                    android:layout_width="@dimen/sz_50"
                    android:layout_height="@dimen/sz_50"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/sz_24"
                    android:scaleType="fitXY"/>


                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/sz_20"
                    android:text="用户名称"
                    android:textSize="@dimen/sz_16"/>
            </RelativeLayout>
        </com.balysv.materialripple.MaterialRippleLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:mrl_rippleAlpha="0.1"
            app:mrl_rippleColor="#585858"
            app:mrl_rippleDelayClick="true"
            app:mrl_rippleDimension="10dp"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">


            <RelativeLayout
                android:id="@+id/rl_balance"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sz_48"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/sz_26"
                    android:text="余额"
                    android:textSize="@dimen/sz_16"/>


                <TextView
                    android:id="@+id/tv_balance_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/sz_20"
                    android:text="1000"/>
            </RelativeLayout>

        </com.balysv.materialripple.MaterialRippleLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"
            android:visibility="gone"/>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:mrl_rippleAlpha="0.1"
            app:mrl_rippleColor="#585858"
            app:mrl_rippleDelayClick="true"
            app:mrl_rippleDimension="10dp"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">

            <RelativeLayout
                android:id="@+id/rl_recharge"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sz_48"
                android:background="@color/white"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/sz_26"
                    android:text="充值"
                    android:textSize="@dimen/sz_16"/>


                <ImageView
                    android:layout_width="@dimen/sz_10"
                    android:layout_height="@dimen/sz_18"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/sz_20"
                    android:background="@mipmap/ic_arrow_right"/>
            </RelativeLayout>
        </com.balysv.materialripple.MaterialRippleLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"
            android:visibility="gone"/>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:mrl_rippleAlpha="0.1"
            app:mrl_rippleColor="#585858"
            app:mrl_rippleDelayClick="true"
            app:mrl_rippleDimension="10dp"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">


            <RelativeLayout
                android:id="@+id/rl_withdraw"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sz_48"
                android:background="@color/white"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/sz_26"
                    android:text="提现"
                    android:textSize="@dimen/sz_16"/>


                <ImageView
                    android:layout_width="@dimen/sz_10"
                    android:layout_height="@dimen/sz_18"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/sz_20"
                    android:background="@mipmap/ic_arrow_right"/>
            </RelativeLayout>

        </com.balysv.materialripple.MaterialRippleLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:mrl_rippleAlpha="0.1"
            app:mrl_rippleColor="#585858"
            app:mrl_rippleDelayClick="true"
            app:mrl_rippleDimension="10dp"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">

            <RelativeLayout
                android:id="@+id/rl_detail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sz_48"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/sz_26"
                    android:text="收支明细"
                    android:textSize="@dimen/sz_16"/>


                <ImageView
                    android:layout_width="@dimen/sz_10"
                    android:layout_height="@dimen/sz_18"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/sz_20"
                    android:background="@mipmap/ic_arrow_right"/>
            </RelativeLayout>

        </com.balysv.materialripple.MaterialRippleLayout>
    </LinearLayout>
</RelativeLayout>