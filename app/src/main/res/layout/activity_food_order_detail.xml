<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.maxiaobu.healthclub.ui.activity.FoodOrderDetailActivity">


    <include layout="@layout/common_title"
        android:id="@+id/title_bar"
        />
    
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_below="@id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sz_8"
        android:layout_marginRight="@dimen/sz_8"
        android:layout_marginTop="@dimen/sz_10"
        android:layout_marginBottom="@dimen/sz_20"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/sz_10"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/sz_40"
                android:text="已完成"
                android:layout_marginRight="@dimen/sz_10"
                android:textSize="@dimen/sz_16"
                android:textColor="@color/orange"/>

            <View
                android:id="@+id/v_view"
                android:layout_marginRight="@dimen/sz_12"
                android:layout_marginLeft="@dimen/sz_12"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/tv_title"
                android:background="@color/gray"/>

            <RelativeLayout
                android:id="@+id/rl_layout1"
                android:layout_marginBottom="@dimen/sz_20"
                android:layout_marginRight="@dimen/sz_12"
                android:layout_marginLeft="@dimen/sz_16"
                android:layout_marginTop="@dimen/sz_12"
                android:layout_below="@id/v_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_food_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="增肌套餐 :"
                    android:textSize="@dimen/sz_16"/>


                <TextView
                    android:id="@+id/tv_food_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sz_16"
                    android:layout_alignParentRight="true"
                    android:text="x1"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_layou2"
                android:layout_below="@id/rl_layout1"
                android:layout_marginBottom="@dimen/sz_20"
                android:layout_marginRight="@dimen/sz_12"
                android:layout_marginLeft="@dimen/sz_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/sz_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下单时间 :"/>


                <TextView
                    android:id="@+id/tv_food_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sz_16"
                    android:layout_alignParentRight="true"
                    android:text="2015-12-25  13:50"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_layout3"
                android:layout_marginBottom="@dimen/sz_20"
                android:layout_marginRight="@dimen/sz_12"
                android:layout_marginLeft="@dimen/sz_16"
                android:layout_below="@id/rl_layou2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配送方式 :"
                    android:textSize="@dimen/sz_16"/>

                <TextView
                    android:id="@+id/tv_food_shipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/sz_16"
                    android:text="快递派送"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_layout4"
                android:layout_below="@id/rl_layout3"
                android:layout_marginBottom="@dimen/sz_20"
                android:layout_marginRight="@dimen/sz_12"
                android:layout_marginLeft="@dimen/sz_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <TextView
                    android:id="@+id/tv_food_address_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sz_16"
                    android:text="收货地址 :"/>
                
                
                <RelativeLayout
                    android:layout_marginLeft="@dimen/sz_20"
                    android:layout_toRightOf="@id/tv_food_address_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_food_userAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="lallallalalalalalalaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                        android:textSize="@dimen/sz_16"
                        android:layout_alignParentRight="true"/>
                    
                </RelativeLayout>
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/rl_layout5"
                android:layout_marginBottom="@dimen/sz_20"
                android:layout_marginRight="@dimen/sz_12"
                android:layout_marginLeft="@dimen/sz_16"
                android:layout_below="@id/rl_layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sz_16"
                    android:text="收货人姓名 :"/>
                
                
                <TextView
                    android:id="@+id/tv_food_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="于谦"
                    android:textSize="@dimen/sz_16"
                    android:layout_alignParentRight="true"/>
                
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/rl_layout6"
                android:layout_marginBottom="@dimen/sz_20"
                android:layout_marginRight="@dimen/sz_12"
                android:layout_marginLeft="@dimen/sz_16"
                android:layout_below="@id/rl_layout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sz_16"
                    android:text="收货人电话 :"/>
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sz_16"
                    android:text="13204112676"
                    android:id="@+id/tv_food_userPhone"
                    android:layout_alignParentRight="true"/>
                
            </RelativeLayout>
            
            
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_layout7"
                android:layout_marginBottom="@dimen/sz_14"
                android:layout_marginRight="@dimen/sz_12"
                android:layout_marginLeft="@dimen/sz_16"
                android:layout_below="@id/rl_layout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sz_16"
                    android:text="快递单号 :"/>
                
                <TextView
                    android:id="@+id/tv_food_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sz_16"
                    android:layout_alignParentRight="true"
                    android:text="1234567890976586"/>
            </RelativeLayout>

            <View
                android:id="@+id/v_view1"
                android:layout_marginRight="@dimen/sz_12"
                android:layout_marginLeft="@dimen/sz_12"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/rl_layout7"
                android:background="@color/gray"/>


            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/rl_layout8"
                android:layout_marginRight="@dimen/sz_12"
                android:layout_marginLeft="@dimen/sz_16"
                android:layout_below="@id/v_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleAlpha="0.1"
                app:mrl_rippleColor="#585858"
                app:mrl_rippleDelayClick="true"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true"
                android:padding="@dimen/sz_4">
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sz_54">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下次配送 :"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/sz_16"/>

                    <ImageView
                        android:id="@+id/arr_right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/ic_arrow_right"
                        android:layout_width="@dimen/sz_10"
                        android:layout_height="@dimen/sz_16"/>

                    <TextView
                        android:id="@+id/tv_food_nextTime"
                        android:layout_marginRight="@dimen/sz_16"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/arr_right"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sz_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2016-08-24  星期三  午餐"/>
                </RelativeLayout>
            </com.balysv.materialripple.MaterialRippleLayout>


            <View
                android:id="@+id/v_view2"
                android:layout_marginRight="@dimen/sz_12"
                android:layout_marginLeft="@dimen/sz_12"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/rl_layout8"
                android:background="@color/gray"/>
            
            <TextView
                android:id="@+id/tv_food_money"
                android:layout_marginRight="@dimen/sz_16"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sz_54"
                android:layout_below="@id/v_view2"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="共计： 98元"
                android:gravity="center_vertical|right"
                android:textSize="@dimen/sz_18"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:gravity="center_vertical|right"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sz_74">

        <Button
            android:id="@+id/next_button"
            android:layout_marginRight="@dimen/sz_12"
            android:background="@drawable/bg_food_order_select"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="@dimen/sz_92"
            android:layout_height="@dimen/sz_38"
            android:text="再来一单"/>
    </LinearLayout>
</RelativeLayout>
