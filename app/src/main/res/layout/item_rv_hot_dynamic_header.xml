<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/banner_main_depth"
        style="@style/BannerDefaultStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sz_158"
        app:banner_pointContainerBackground="@android:color/transparent"
        app:banner_pointDrawable="@android:color/transparent"
        app:banner_transitionEffect="depth"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sz_80"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginRight="@dimen/sz_20"
        android:layout_marginLeft="@dimen/sz_20">

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/ly_enter_group"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/sz_30"
                android:layout_height="@dimen/sz_30"
                android:src="@mipmap/ic_enter_group"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加入群"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/ly_tips"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/sz_40"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/sz_30"
                android:layout_height="@dimen/sz_30"
                android:src="@mipmap/ic_same_city"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小贴士"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/ly_same_city"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="@dimen/sz_40">

            <ImageView
                android:layout_width="@dimen/sz_30"
                android:layout_height="@dimen/sz_30"
                android:src="@mipmap/ic_tips"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="同城"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/item_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sz_10"
        android:background="#FAFAFA"/>
</LinearLayout>