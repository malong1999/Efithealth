<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_train_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.maxiaobu.healthclub.ui.activity.TrainDataActivity">

    <include layout="@layout/common_title"/>
    <com.balysv.materialripple.MaterialRippleLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:mrl_rippleAlpha="0.1"
        app:mrl_rippleColor="#585858"
        app:mrl_rippleDelayClick="true"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true"
        app:mrl_rippleDimension="10dp"
        android:visibility="visible">
        <LinearLayout
            android:id="@+id/ly_treadmill"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sz_50"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/sz_30"
                android:layout_height="@dimen/sz_30"
                android:src="@mipmap/test_header"
                android:layout_marginLeft="@dimen/sz_20"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sz_20"
                android:layout_weight="1"
                android:text="跑步机"
                android:textSize="@dimen/sz_16"
                />

            <ImageView
                android:layout_width="@dimen/sz_18"
                android:layout_height="@dimen/sz_18"
                android:layout_marginRight="@dimen/sz_20"
                android:src="@mipmap/ic_arrow_right"
                />
        </LinearLayout>
    </com.balysv.materialripple.MaterialRippleLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray"/>
</LinearLayout>
