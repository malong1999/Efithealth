<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_enter_door"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.maxiaobu.healthclub.ui.activity.EnterDoorActivity">

    <RelativeLayout
        android:layout_marginTop="@dimen/sz_126"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_enter_door"
            android:layout_width="@dimen/sz_90"
            android:layout_height="@dimen/sz_90"
            android:layout_centerHorizontal="true"
            tools:src="@mipmap/test_header"/>

        <TextView
            android:id="@+id/tv_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_enter_door"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/sz_20"
            android:text="扫码成功"
            android:textColor="@color/white"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sz_70"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/sz_20"
        android:layout_marginLeft="@dimen/sz_20"
        android:layout_marginRight="@dimen/sz_20">

        <Button
            android:id="@+id/btn_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/btn_green_noraml"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="@dimen/sz_16"
            />
    </LinearLayout>


</RelativeLayout>
