<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_scan_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_scan_card"
    tools:context="com.maxiaobu.healthclub.ui.activity.ScanCardActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sz_16"
            android:layout_marginLeft="@dimen/sz_20"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_navigation_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="卡包"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sz_20"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"/>
</RelativeLayout>
