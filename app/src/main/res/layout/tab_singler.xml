<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="@dimen/sz_50"
        android:layout_height="@dimen/sz_50">

        <ImageView
            android:layout_centerInParent="true"
            android:background="@drawable/tab_singler_chat"
            android:layout_width="@dimen/sz_32"
            android:layout_height="@dimen/sz_32"
            android:scaleType="fitXY"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/unread_msg_number"
            android:layout_width="@dimen/sz_8"
            android:layout_height="@dimen/sz_8"
            android:layout_marginRight="@dimen/sz_8"
            android:layout_marginTop="@dimen/sz_6"
            android:background="@mipmap/ic_unread_message"/>

    </RelativeLayout>


</LinearLayout>