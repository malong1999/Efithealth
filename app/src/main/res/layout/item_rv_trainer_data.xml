<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ll_container"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/sz_46"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="@dimen/sz_20"
            android:layout_height="@dimen/sz_20"
            android:layout_marginLeft="@dimen/sz_24"
            tools:background="@mipmap/ic_personlly_nickname"/>

        <TextView
            android:id="@+id/item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sz_18"
            tools:text="昵称"
            android:textColor="@color/gray"/>

        <TextView
            android:layout_marginRight="@dimen/sz_10"
            android:layout_marginBottom="@dimen/sz_10"
            android:layout_marginTop="@dimen/sz_10"
            android:layout_gravity="center_vertical"
            android:id="@+id/item_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sz_40"
            tools:text="欧阳文泽"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tv_user_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sz_14"
            android:text="1980-06-19"
            android:textColor="@color/black"
            android:visibility="gone"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/sz_2"
        android:background="@color/gray"/>

</LinearLayout>