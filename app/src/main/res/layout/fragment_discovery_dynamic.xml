<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FAFAFA"
                xmlns:fab="http://schemas.android.com/apk/res-auto">


    <com.aspsine.swipetoloadlayout.SwipeToLoadLayout
        android:id="@+id/swipeToLoadLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.maxiaobu.healthclub.ui.weiget.refresh.RefreshHeaderView
            android:id="@+id/swipe_refresh_header"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/swipe_target"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <com.maxiaobu.healthclub.ui.weiget.refresh.LoadMoreFooterView
            android:id="@+id/swipe_load_more_footer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"/>


    </com.aspsine.swipetoloadlayout.SwipeToLoadLayout>


    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fab_send_discovery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_fab"
        android:paddingBottom="@dimen/sz_10"
        android:paddingLeft="@dimen/sz_10"
        android:paddingRight="@dimen/sz_10"
        android:layout_marginBottom="@dimen/sz_10"
        android:layout_marginRight="@dimen/sz_10"
        fab:fab_colorNormal="@color/colorOrange"
        fab:fab_colorPressed="@color/colorOrangeDark"/>

</RelativeLayout>