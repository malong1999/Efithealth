<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <LinearLayout
        android:layout_marginBottom="@dimen/sz_10"
        android:layout_marginTop="@dimen/sz_10"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="@dimen/sz_80"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@mipmap/ic_person_default"
            android:scaleType="fitXY"
            android:id="@+id/member_image"
            android:layout_width="@dimen/sz_56"
            android:layout_height="@dimen/sz_56"
            android:layout_centerVertical="true"/>


        <TextView
            android:ellipsize="end"
            android:singleLine="true"
            android:gravity="center"
            android:layout_marginTop="@dimen/sz_6"
            android:id="@+id/member_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="会员1"/>

    </LinearLayout>

</LinearLayout>