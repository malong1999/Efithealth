<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_marginTop="@dimen/sz_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sz_30"
        android:text="提示"
        android:textSize="@dimen/sz_16"
        android:textColor="@color/red"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/dialog_content"
        android:layout_marginBottom="@dimen/sz_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sz_30"
        tools:text="你确定要退出该群？"
        android:textColor="@color/black"
        android:textSize="@dimen/sz_14"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0.1dp"
            android:layout_height="@dimen/sz_40"
            android:background="@color/gray"/>

        <TextView
            android:id="@+id/group_go"
            android:layout_weight="1"
            android:text="确定"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sz_40"/>

        <View
            android:layout_width="0.1dp"
            android:layout_height="@dimen/sz_40"
            android:background="@color/gray"/>

        <TextView
            android:id="@+id/group_cancle"
            android:text="取消"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sz_40"
            android:layout_weight="1"/>

        <View
            android:layout_width="0.1dp"
            android:layout_height="@dimen/sz_40"
            android:background="@color/gray"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray"/>
</LinearLayout>